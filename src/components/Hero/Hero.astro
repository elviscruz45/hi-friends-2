---
/**
 * * Hero with background image
 * You'll want a mobile image, and a desktop image for this.
 */

import Button from "@components/Button/Button.astro";
import heroImage from "@images/hero-bg-min.jpg";
import heroImageMobile from "@images/hero-bg-min-movil.jpg";
import { Image } from "astro:assets";
---

<section id="hero" class="relative z-10 flex min-h-[100lvh] w-full">
	<!-- background image -->
	<div class="absolute -z-10 h-full min-h-full w-full overflow-hidden">
		<div class="absolute inset-0 bg-black/10"></div>

		<Image
			src={heroImage}
			class="hidden h-auto min-h-full w-full object-cover object-bottom sm:block"
			alt="wedding"
			aria-hidden="true"
			loading="eager"
			height={1400}
		/>
		<Image
			src={heroImageMobile}
			class="h-auto min-h-full w-full object-cover sm:hidden"
			alt="wedding"
			aria-hidden="true"
			loading="eager"
			width={1200}
		/>
	</div>

	<!-- hero items -->
	<div class="site-container relative w-full gap-10 py-44 text-center md:py-52 md:text-left">
		<!-- Hero text -->
		<div class="text-base-50 my-auto mr-auto max-w-[800px] flex-col">
			<h1
				class="font-heading-1 text-4xl font-semibold text-pretty drop-shadow-[0_2px_2px_rgba(0,0,0,0.4)] md:text-7xl md:leading-tight"
			>
				Hi Friends!
			</h1>
			<p
				class="mt-8 text-lg tracking-widest text-pretty drop-shadow-[0_1px_1px_rgba(0,0,0,0.2)] md:max-w-[550px] md:text-2xl"
			>
				Es una plataforma m√≥vil para conocer personas, hacer nuevos amigos y compartir intereses en
				un entorno seguro, moderno y divertido.
			</p>

			<!-- App Download Buttons -->
			<div
				class="mt-10 flex flex-col items-center gap-4 md:flex-row md:items-start md:justify-start"
			>
				<p
					class="mb-4 text-lg font-medium text-white drop-shadow-[0_1px_1px_rgba(0,0,0,0.2)] md:mr-4 md:mb-0 md:text-xl"
				>
				</p>

				<div class="flex flex-col gap-3 sm:flex-row sm:gap-4">
					<!-- Google Play Store Button -->
					<a
						href="https://play.google.com/store/apps/details?id=com.elviscruz29.HiFriends&pcampaignid=web_share"
						target="_blank"
						rel="noopener noreferrer"
						class="inline-flex items-center gap-3 rounded-lg border border-white/20 bg-black/80 px-6 py-3 text-white backdrop-blur-sm transition-all duration-300 hover:scale-105 hover:bg-black/90"
					>
						<svg class="h-8 w-8" viewBox="0 0 24 24" fill="currentColor">
							<path
								d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.61 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.92 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"
							></path>
						</svg>
						<div class="text-left">
							<div class="text-xs opacity-90">Disponible en</div>
							<div class="text-sm font-semibold">Google Play</div>
						</div>
					</a>

					<!-- Apple App Store Button -->
					<a
						href="https://testflight.apple.com/join/ph2cKm4v"
						target="_blank"
						rel="noopener noreferrer"
						class="inline-flex items-center gap-3 rounded-lg border border-white/20 bg-black/80 px-6 py-3 text-white backdrop-blur-sm transition-all duration-300 hover:scale-105 hover:bg-black/90"
					>
						<svg class="h-8 w-8" viewBox="0 0 24 24" fill="currentColor">
							<path
								d="M18.71,19.5C17.88,20.74 17,21.95 15.66,21.97C14.32,22 13.89,21.18 12.37,21.18C10.84,21.18 10.37,21.95 9.1,22C7.79,22.05 6.8,20.68 5.96,19.47C4.25,17 2.94,12.45 4.7,9.39C5.57,7.87 7.13,6.91 8.82,6.88C10.1,6.86 11.32,7.75 12.11,7.75C12.89,7.75 14.37,6.68 15.92,6.84C16.57,6.87 18.39,7.1 19.56,8.82C19.47,8.88 17.39,10.1 17.41,12.63C17.44,15.65 20.06,16.66 20.09,16.67C20.06,16.74 19.67,18.11 18.71,19.5M13,3.5C13.73,2.67 14.94,2.04 15.94,2C16.07,3.17 15.6,4.35 14.9,5.19C14.21,6.04 13.07,6.7 11.95,6.61C11.8,5.46 12.36,4.26 13,3.5Z"
							></path>
						</svg>
						<div class="text-left">
							<div class="text-xs opacity-90">Descargar en</div>
							<div class="text-sm font-semibold">App Store</div>
						</div>
					</a>

					<!-- Web App Button -->
					<a
						href="https://hi-friends-app.vercel.app/"
						target="_blank"
						rel="noopener noreferrer"
						class="inline-flex items-center gap-3 rounded-lg border border-white/30 bg-white/90 px-6 py-3 text-gray-900 backdrop-blur-sm transition-all duration-300 hover:scale-105 hover:bg-white"
					>
						<svg class="h-8 w-8" viewBox="0 0 24 24" fill="currentColor">
							<path
								d="M16.36,14C16.44,13.34 16.5,12.68 16.5,12C16.5,11.32 16.44,10.66 16.36,10H19.74C19.9,10.64 20,11.31 20,12C20,12.69 19.9,13.36 19.74,14M14.59,19.56C15.19,18.45 15.65,17.25 15.97,16H18.92C17.96,17.65 16.43,18.93 14.59,19.56M14.34,14H9.66C9.56,13.34 9.5,12.68 9.5,12C9.5,11.32 9.56,10.65 9.66,10H14.34C14.43,10.65 14.5,11.32 14.5,12C14.5,12.68 14.43,13.34 14.34,14M12,19.96C11.17,18.76 10.5,17.43 10.09,16H13.91C13.5,17.43 12.83,18.76 12,19.96M8,8H5.08C6.03,6.34 7.57,5.06 9.4,4.44C8.8,5.55 8.35,6.75 8,8M5.08,16H8C8.35,17.25 8.8,18.45 9.4,19.56C7.57,18.93 6.03,17.65 5.08,16M4.26,14C4.1,13.36 4,12.69 4,12C4,11.31 4.1,10.64 4.26,10H7.64C7.56,10.66 7.5,11.32 7.5,12C7.5,12.68 7.56,13.34 7.64,14M12,4.03C12.83,5.23 13.5,6.57 13.91,8H10.09C10.5,6.57 11.17,5.23 12,4.03M18.92,8H15.97C15.65,6.75 15.19,5.55 14.59,4.44C16.43,5.07 17.96,6.34 18.92,8Z"
							></path>
						</svg>
						<div class="text-left">
							<div class="text-xs opacity-90">Usar en</div>
							<div class="text-sm font-semibold">Navegador Web</div>
						</div>
					</a>
				</div>
			</div>
		</div>
	</div>
</section>
